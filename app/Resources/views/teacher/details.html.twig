{% extends 'base.html.twig' %}
{% block main %}
    <div class="row mt-5">
        <div class="col-12">
            <div class="row">
                <div class="col-2 text-center">First Name</div>
                <div class="col-2 text-center">Last Name</div>
                <div class="col-2 text-center">Email</div>
                <div class="col-2 text-center">Personal ID</div>
                <div class="col-2 text-center">Grade</div>
                <div class="col-2 text-center">Actions</div>
            </div>
            <div class="row mt-2">
                <div class="col-2 full-border">{{ student.firstName }}</div>
                <div class="col-2 full-border">{{ student.lastName }}</div>
                <div class="col-2 full-border">{{ student.email }}</div>
                <div class="col-2 full-border">{{ student.personalID }}</div>
                <div class="col-2 full-border">{{ student.grade }}</div>
                <div class="col-2 full-border">
                    <button class="btn-block btn-primary btn btn-show-grades">Show Grades <span class="ml-2"> <i class="fas fa-arrow-right animation"></i></span></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row grades d-none">
        <div class="col-12">
            <div class="row mt-2">
                <div class="col-3 text-center">Course*</div>
                <div class="col-3 text-center">Grade*</div>
                <div class="col-3 text-center">Notes</div>
                <div class="col-3 text-center">Actions</div>
            </div>
            {% for grade in grades %}
                <div class="row m-3">
                    <div class="col-3 grade-name">
                        {{ grade.gradename }}
                    </div>
                    <div class="col-3 grade-value">
                        {{ grade.value }}
                    </div>
                    <div class="col-3 grade-notes">
                        {{ grade.notes }}
                    </div>
                    <div class="col-3 grade-actions">
                        <a  href="{{ path('teacher_edit_grades', {'grade_id': grade.id}) }}"
                            class="btn-success btn grade-edit"
                            id="btn-edit-{{ grade.id }}"
                        >Edit
                        </a>
                        <a href="{{ path('teacher_delete_grades', {'grade_id': grade.id}) }}"
                           class="btn-danger btn grade-delete"
                           id="btn-delete-{{ grade.id }}"
                        >Delete
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-12 mt-5">
            <a href="{{ path('teacher_add_grades', {'student_id': student.id}) }}" class="btn-primary btn float-right" id="grade-add">Add</a>
        </div>
    </div>
{% endblock %}

