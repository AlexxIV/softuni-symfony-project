{% extends 'base.html.twig' %}
{% block body_id 'login' %}
{% block main %}
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            {{ form_start(form, {'method': 'POST', 'action': path('security_login') }) }}
            {{ form_end(form)}}
        </div>
    </div>
{% endblock %}


{# block body %}


    <form name="authenticate" action="{{ path('security_login') }}" method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="_username" placeholder="Email" value="{{ last_username }}">

        <label for="password">Password:</label>
        <input type="password" id="password" placeholder="Password" name="_password">



        <button type="submit" >Login</button>
    </form>
{% endblock #}