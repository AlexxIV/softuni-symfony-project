{% block navbar %}
    <nav class="navbar navbar-expand-md navbar-dark bg-dark" id="header">
        <a class="navbar-brand" href="/"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample03"
                aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {% if app.user %}
                                        {% if ((is_granted('ROLE_ADMIN')) and (app.request.attributes.get('_route') == 'admin_home')) or
                    ((is_granted('ROLE_TEACHER')) and (app.request.attributes.get('_route')) == 'teacher_home') or
                    ((is_granted('ROLE_USER')) and (app.request.attributes.get('_route') == 'student_home')) %}active
                                        {% endif %}
                                    {% endif %}">
                    <a class="nav-link" href="{{ path('homepage') }}{# if app.user %}
                                                {% if (is_granted('ROLE_ADMIN')) %}
                                                    {{ path('admin_home') }}
                                                    {% elseif (is_granted('ROLE_TEACHER')) %}
                                                    {{ path('teacher_home') }}
                                                    {% elseif (is_granted('ROLE_USER')) %}
                                                    {{ path('student_home') }}
                                                    {% endif %}
                                                    {% else %}
                                                    {{ path('homepage') }}
                                            {% endif #}"
                    >Home</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}

                    {% elseif is_granted('ROLE_TEACHER') and not is_granted('ROLE_ADMIN') %}
                        {% include 'teacher/partials/navigation.html.twig' %}
                    {% else %}
                        {% include 'student/partials/navigation.html.twig' %}
                    {% endif %}
                        {% include 'common/partials/auth-navigation.html.twig' %}
                {% else %}
                    {% include 'common/partials/anon-navigation.html.twig' %}
                {% endif %}
            </ul>
        </div>
    </nav>
{% endblock %}