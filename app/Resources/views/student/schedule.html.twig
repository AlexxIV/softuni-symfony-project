{% extends 'base.html.twig' %}
{% block main %}
    <div class="row">
        <div class="col-12 schedule-table mt-5">
            <div class="row">
                {% for day in test %}
                    <div class="{{ day.day == 'Monday' ? 'offset-lg-1 ' : '' }}col-8 offset-2 col-lg-2 offset-lg-0 table-cell">
                        <div class="col-12 text-center table-head font-weight-bolder">{{ day.day }}</div>
                        <div class="row table-row first-row">
                            <div class="col-2 table-index">1</div>
                            <div class="col-9 table-value">{{ day.first }}</div>
                        </div>
                        <div class="row table-row">
                            <div class="col-2 table-index">2</div>
                            <div class="col-9 table-value">{{ day.second }}</div>
                        </div>
                        <div class="row table-row">
                            <div class="col-2 table-index">3</div>
                            <div class="col-9 table-value">{{ day.third }}</div>
                        </div>
                        <div class="row table-row">
                            <div class="col-2 table-index">4</div>
                            <div class="col-9 table-value">{{ day.fourth }}</div>
                        </div>
                        <div class="row table-row">
                            <div class="col-2 table-index">5</div>
                            <div class="col-9 table-value">{{ day.fifth }}</div>
                        </div>
                        <div class="row table-row">
                            <div class="col-2 table-index">6</div>
                            <div class="col-9 table-value">{{ day.sixth }}</div>
                        </div>
                        <div class="row table-row">
                            <div class="col-2 table-index">7</div>
                            <div class="col-9 table-value">{{ day.seventh }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}


